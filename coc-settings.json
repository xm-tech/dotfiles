{
  "coc.preferences.extensionUpdateCheck": "never",
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.timeout": 2000,
  "suggest.minTriggerInputLength": 2,
  "suggest.maxCompleteItemCount": 10,
  "suggest.triggerAfterInsertEnter": false,
  "suggest.snippetIndicator": " â–º",
  "suggest.acceptSuggestionOnCommitCharacter": false,
  
  "diagnostic.level": "warning",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.messageTarget": "float",
  "diagnostic.enableMessage": "jump",
  "diagnostic.virtualText": false,
  "diagnostic.enableHighlightLineNumber": false,
  "diagnostic.refreshOnInsertMode": false,
  
  "coc.preferences.jumpCommand": "split",
  "coc.preferences.messageLevel": "error",
  "coc.preferences.formatOnSaveTimeout": 1000,
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "python",
    "lua",
    "cs"
  ],
  
  "omnisharp.useGlobalMono": "never",
  "omnisharp.path": "latest",
  "omnisharp.enableRoslynAnalyzers": false,
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.enableImportCompletion": true,
  "omnisharp.trace.server": "error",
  "omnisharp.debug.server": false,
  
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "yapf",
  
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".git/"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "staticcheck": false,
        "usePlaceholders": false,
        "completeUnimported": false,
        "deepCompletion": false
      }
    },
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls-root",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "~/.ccls-cache"
        },
        "client": {
          "snippetSupport": true
        },
        "index": {
          "threads": 2
        }
      }
    }
  }
}
